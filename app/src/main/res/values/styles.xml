<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="wrapper_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
    </style>

    <style name="wrapper_edit_text_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="input_edit_text_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:inputType">textPassword</item>
    </style>



    <style name="header_label2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/extra_medium_text</item>
    </style>

    <style name="bg_button_auth">
        <item name="android:layout_marginTop">@dimen/extra_large_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_label_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>